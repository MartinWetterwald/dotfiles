# vim: filetype=muttrc

# If the compile-time symbol 'USE_SIDEBAR' does not exist, then
# # stop reading the current config file.
ifndef USE_SIDEBAR finish

set sidebar_width=38
set sidebar_visible=yes
set sidebar_divider_char=" "
set sidebar_folder_indent=yes
set sidebar_delim_chars="/"
set sidebar_short_path=yes
set sidebar_format=" %B%?F? [%F]?%* %?N?(%N) ?%S "

# Enable extended buffy mode to calculate total, new, and flagged
# # message counts for each mailbox.
set mail_check_stats

color sidebar_ordinary color241 color234
color sidebar_flagged color241 color234
color sidebar_new color33 color234
color sidebar_divider color241 color235
color sidebar_highlight color0 color24

bind pager <down>   sidebar-next
bind pager <up>     sidebar-prev
bind pager <right>  sidebar-open

bind index J    sidebar-next
bind index K    sidebar-prev
bind index L    sidebar-open
