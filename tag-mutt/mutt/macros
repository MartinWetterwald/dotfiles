# vim: filetype=muttrc

# rofi-url to open links in mail bodies
macro pager \Co "|rofi-url<enter>" "call rofi-url to open links"

# Saner copy/move dialogs
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"

# Ctrl-n to mark all as read
macro index \Cn "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"

# Go to inbox
macro index gi "<change-folder>!<enter>" "Go to inbox"
